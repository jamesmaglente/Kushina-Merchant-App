<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigations.items.AddEditItemActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="-10dp"
            android:id="@+id/til_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginHorizontal="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Category:"
                    android:textColor="@color/colorTitle"
                    android:textStyle="bold"
                    android:gravity="center|start"
                    android:layout_weight="1.5"
                    android:textSize="18sp"/>



                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/s_category"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="50dp" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1.3dp"
                android:layout_marginBottom="5dp"
                android:layout_marginHorizontal="4dp"
                android:background="@color/colorTitle"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Switch
            android:theme="@style/SCBSwitch"
            android:checked="false"
            android:id="@+id/switch_item_status"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorTitle"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginHorizontal="50dp"
            android:text="None"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Switch>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_add_edit_items_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:layout_marginHorizontal="40dp"
            app:hintTextColor="@color/colorTitle">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginBottom="10dp"
                android:id="@+id/edt_add_edit_items_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorTitle"
                android:translationY="3dp"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:drawableTint="@color/colorPrimary"
                android:background="@drawable/round_border"
                android:drawableLeft="@drawable/ic_edit_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Item Name"
                android:inputType="text"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/colorTitle"
                app:hintTextColor="@color/colorTitle">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/til_add_edit_items_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:layout_marginHorizontal="40dp"
            app:hintTextColor="@color/colorTitle">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_marginBottom="10dp"
                android:id="@+id/edt_add_edit_items_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorTitle"
                android:translationY="3dp"
                android:drawableTint="@color/colorPrimary"
                android:background="@drawable/round_border"
                android:drawableLeft="@drawable/ic_edit_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Item Price"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/colorTitle"
                app:hintTextColor="@color/colorTitle">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/til_add_edit_items_item_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:layout_marginHorizontal="40dp"
            app:hintTextColor="@color/colorTitle">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_marginBottom="10dp"
                android:id="@+id/edt_add_edit_items_item_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorTitle"
                android:translationY="3dp"
                android:drawableTint="@color/colorPrimary"
                android:background="@drawable/round_border"
                android:drawableLeft="@drawable/ic_edit_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Quantity"
                android:inputType="number"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/colorTitle"
                app:hintTextColor="@color/colorTitle">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/til_add_edit_items_item_toque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:layout_marginHorizontal="40dp"
            app:hintTextColor="@color/colorTitle">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_marginBottom="10dp"
                android:id="@+id/edt_add_edit_items_item_toque"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorTitle"
                android:translationY="3dp"
                android:drawableTint="@color/colorPrimary"
                android:background="@drawable/round_border"
                android:drawableLeft="@drawable/ic_edit_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Toque"
                android:inputType="number"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/colorTitle"
                app:hintTextColor="@color/colorTitle">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_add_edit_items_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:layout_marginHorizontal="40dp"
            app:hintTextColor="@color/colorTitle">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginBottom="10dp"
                android:id="@+id/edt_add_edit_items_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorTitle"
                android:translationY="3dp"
                android:background="@drawable/rectangle_border"
                android:drawablePadding="10dp"
                android:hint="Item Description"
                android:inputType="textMultiLine"
                android:minHeight="200dp"
                android:gravity="start"
                android:padding="12dp"
                android:textColor="@color/colorTitle"
                app:hintTextColor="@color/colorTitle">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/colorTitle"
            android:text="Item Picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </TextView>

        <TextView
            android:textStyle="bold"
            android:textSize="11sp"
            android:textColor="@color/colorPrimary"
            android:text="Upload the picture of the item."
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </TextView>

        <ImageView
            android:id="@+id/iv_item_image"
            android:src="@drawable/ic_add_a_photo_black_24dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="250dp">

        </ImageView>


    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorTitle"/>

        <Button
            android:id="@+id/btn_save_item"
            android:textSize="16sp"
            android:text="Save"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/round_bg"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

        </Button>

        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </Space>



    </LinearLayout>

    </ScrollView>


</RelativeLayout>