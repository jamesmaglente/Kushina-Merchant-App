                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:gravity="end"
                    android:id="@+id/tv_dashboard_total_delivered_orders"
                    android:layout_gravity="end"
                    android:layout_marginTop="20dp"
                    android:textSize="16sp"
