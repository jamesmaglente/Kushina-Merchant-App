                    android:id="@+id/tv_dashboard_total_commissions"
                    android:layout_gravity="end"
                    android:layout_marginTop="20dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:text="₱ 00.00"
